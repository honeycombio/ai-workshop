{
  "name": "otel-ai-chatbot",
  "version": "1.0.0",
  "description": "AI chatbot for OpenTelemetry integration assistance using LangChain and multiple LLM providers",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup-data": "node scripts/ingest-data.js",
    "test": "jest",
    "start:chroma": "chroma run --host localhost --port 8000",
    "start:client": "cd client && npm run start",
    "start:server": "npm run dev",
    "start:all": "npx concurrently \"npm run start:chroma\" \"npm run start:server\" \"npm run start:client\"",
    "stop:all": "npx concurrently \"kill -9 $(lsof -ti :3000)\" \"kill -9 $(lsof -ti :8000)\" \"kill -9 $(lsof -ti :3001)\""
  },
  "keywords": [
    "opentelemetry",
    "ai",
    "chatbot",
    "langchain",
    "rag"
  ],
  "author": "Howard Yoo",
  "license": "MIT",
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/aws": "^0.1.14",
    "@langchain/community": "^0.0.20",
    "@langchain/core": "^0.3.2",
    "@langchain/openai": "^0.0.14",
    "@langchain/textsplitters": "^0.1.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
